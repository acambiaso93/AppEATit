<div class="new-recipe-card">
  <div id="recipe-form-title">
    <span>Share a new recipe</span>
    <div class="icon-x"><i class="fa-solid fa-xmark float-end" data-action="click->flip#revealRecipeFront"></i></div>
  </div>

  <%= simple_form_for recipe do |f| %>
    <div id="recipe-form">
      <div class="page-one">
        <%= f.input_field :name, placeholder: "Recipe's name", class: "title-input" %>
        <div class="mt-4">
          <p>Upload a photo</p>
          <%= f.input :photo, as: :file, label: false %>
        </div>
        <div class="mt-4">
          <%= f.input :video, placeholder: "YouTube Video URL" %>
        </div>
        <div class="mt-4">
          <%= f.input_field :category, placeholder: "Category", class: "title-input" %>
        </div>
        <div class="form-servings">
          <div class="d-flex align-items-baseline">
            <i class="fa-solid fa-utensils"></i>
            <%= f.input :servings, label: false %>
          </div>
          <div class="d-flex align-items-baseline">
            <p>Cooking Time: <%= f.input :cooking_time, label: false %> mins</p>
          </div>
        </div>

        <%= f.input :difficulty, collection: ["easy", "moderate", "hard"] %>
      </div>

      <div class="page-two">
        <%= f.input_field :instructions, placeholder: "Type your instructions...", class: "recipe-input" %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="mt-3 create-recipe-btn">
          <%= f.button :submit, class: "button-small flex-fill", data: { action: 'click->flip#revealRecipeFront' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>
