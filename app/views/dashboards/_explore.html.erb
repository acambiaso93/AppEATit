<div class="dashboard-container">
  <div class="kitchen" data-action="click->container#revealKitchen">
      <a>Kitchen</a>
  </div>
  <div class="cookbook" data-action="click->container#revealCookbook">
      <a>Cookbook</a>
  </div>
  <div class="explore" data-action="click->container#revealExplore">
      <a>Explore</a>
  </div>
  <div class="profile" data-action="click->container#revealProfile">
    Profile
  </div>

 <div class="dashboard-fridge">
  <ul data-user-ingredients="<%= current_user.ingredients.pluck(:name) %>" data-highlight-ingredients-target="ingredientUser">
    <span data-target="explanatoryCaption">Hover on a recipe<br>to see which ingredients are <br><span style="color:green">matching</span>,<br> and which ones are <br><span style="color:red">missing</span></span>
  </ul>
  <div class="counter" data-highlight-ingredients-target="matchingCounter">
    <span data-highlight-ingredients-target="count"></span>
  </div>
</div>

  <div class="search">
    <%= form_with url: dashboard_path, method: :get do %>
      <%= text_field_tag :query,
            params[:query],
            class: "search__input",
            placeholder: "Search for recipes or any ingredient...",
            autocomplete: "off"
      %>
    <% end %>

    <%= link_to dashboard_path(clear: true), data: { turbo_method: :get } do %>
      <i class="fa-solid fa-xmark"></i>
    <% end unless params[:query].blank? %>
  </div>


  <div class="cards">
    <div class="recipe-grid">
      <%= render partial: "recipes/recipe-card", library: {recipe: @recipe} %>
    </div>
  </div>

  <div class="footer"></div>
</div>
