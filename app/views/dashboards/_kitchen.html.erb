<div class="dashboard-container">
  <div class="kitchen" data-action="click->container#revealKitchen">
      <a>Kitchen</a>
  </div>
  <div class="cookbook" data-action="click->container#revealCookbook">
      <a>Cookbook</a>
  </div>
  <div class="explore" data-action="click->container#revealExplore">
      Explore
  </div>
  <div class="profile" data-action="click->container#revealProfile">
    Profile
  </div>
  <div class="dashboard-fridge">
    <ul>
    <% @user_ingredients.uniq(&:ingredient_id).each do |ui| %>
      <div class="ingredient">
        <%= ui.ingredient.name %>
        <%= link_to user_ingredient_path(ui), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-xmark"></i>
        <% end %>
      </div>
    <% end %>
  </ul>
  </div>
  <div class="search">
      <%= form_with(model: @user, url: { action: "add_ingredient" }, method: "post") do |form| %>
    <%= form.collection_select :ingredient_id, @ingredients, :id, :name, { prompt: 'Select an ingredient' } %>
    <%= form.submit "Add Ingredient" %>
  <% end %>
  </div>
  <div class="cards"></div>
  <div class="footer"></div>
</div>
  <div class="cards">
    <div class="recipe-grid">
      <%= render partial: 'shared/recipe-card', collection: @recipes %>
    </div>
  </div>
  <div class="footer"></div>
</div>
