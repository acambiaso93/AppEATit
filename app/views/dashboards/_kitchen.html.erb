<div class="dashboard-container">
  <div class="kitchen" data-action="click->container#revealKitchen">
      <a>Kitchen</a>
  </div>
  <div class="cookbook" data-action="click->container#revealCookbook">
      <a>Cookbook</a>
  </div>
  <div class="explore" data-action="click->container#revealExplore">
      Explore
  </div>
  <div class="profile" data-action="click->container#revealProfile">
    Profile
  </div>
  <div class="dashboard-fridge" data-container-target="fridge">
    <ul>
      <% @user_ingredients.uniq(&:ingredient_id).each do |ui| %>
        <div class="ingredient">
          <%= ui.ingredient.name %>
          <%= link_to user_ingredient_path(ui), data: { turbo_method: :delete } do %>
            <i class="fa-solid fa-xmark"></i>
          <% end %>
        </div>
      <% end %>
    </ul>
  </div>

  <%= render "profile_dropdown" %>

  <div class="search">
      <%= simple_form_for @user_ingredient do |f| %>
      <div class="kitchen-search">
        <%= f.input :ingredient, label: false, collection: @ingredients, input_html: {data: {controller: "tom-select"}, placeholder: 'Type an ingredient here ...'} %>
        <%= f.submit "Add Ingredient", class: "button-main" %>
      </div>
      <% end  %>
  </div>

  <div class="cards">
    <div class="recipe-grid">
      <%= render partial: "recipes/matching_recipes", library: {recipe: @recipe} %>
    </div>
  </div>
  <div class="footer"></div>
</div>
  <div class="cards">
    <div class="recipe-grid">
    </div>
  </div>
  <div class="footer"></div>
</div>
