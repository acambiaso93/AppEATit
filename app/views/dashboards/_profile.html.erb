<div class="profile-container" data-controller="profile">
  <div class="kitchen" data-action="click->container#revealKitchen">
      <a>Kitchen</a>
  </div>
  <div class="cookbook" data-action="click->container#revealCookbook">
      <a>Cookbook</a>
  </div>
  <div class="explore" data-action="click->container#revealExplore">
      Explore
  </div>
  <div class="profile" data-action="click->container#revealProfile">
    Profile
  </div>

  <div id="profile-button" data-profile-target="editProfile">
    <div class="button-main" data-action="click->profile#revealPages">Edit</div>
    <div id="profile-button">
      <%= link_to "Delete", profile_path(@profile), data: {turbo_method: :delete, confirm: 'Are you sure?'}, class: "button-main"  %>
    </div>
    <div id="profile-button">
      <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "button-main" %>
    </div>
  </div>


  <div class="pages d-none" data-profile-target="pages">
    <%= render 'profiles/form', profile: @profile %>
  </div>

  <div class="footer"></div>
</div>
