<div data-controller="container highlight-ingredients">
  <div>
    <div id="kitchen-container" data-container-target="kitchen">
      <%= render "kitchen" %>
    </div>

    <div id="cookbook-container" data-container-target="cookbook" class="d-none">
      <%= render "cookbook" %>
    </div>

    <div id="explore-container" data-container-target="explore" class="d-none">
      <%= render "explore" %>
    </div>

    <% if user_signed_in? && !current_user.profile.nil? %>
      <div id="profile-container" data-container-target="profile" class="d-none">
        <%= render "profile" %>
      </div>
    <% end %>
  </div>
</div>
