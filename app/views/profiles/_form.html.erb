
<div class="container">
  <div class="row justify-content-center">
    <div class="profile-form">
<%= simple_form_for(@profile, url: profile_path(@profile), method: :put) do |f| %>
  <%= f.error_notification %>
  <%= f.simple_fields_for :user do |u| %>
    <%= u.input :user_name %>
    <%= u.input :description %>
    <%= u.input :diet %>
    <%= u.input :profile_picture_url, as: :file, label: false %>
    <%= u.input :location %>
  <% end %>
  <div class="d-flex mt-3 justify-content-between align-items-center">
    <div class="button-main-hover">
      <%= f.button :submit %>
    </div>
    <i class="fa-solid fa-xmark justify-content-center" data-action="click->profile#revealProfile"></i>
  </div>
<% end %>

  </div>
</div>
</div>
