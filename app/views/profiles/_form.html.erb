
<div class="container">
  <div class="row justify-content-center">
    <div class="profile-form">
      <%= simple_form_for(@user, url: user_path(@user), method: :put) do |f| %>
        <%= f.error_notification %>
        <%= f.input :user_name %>
        <%= f.input :description %>
        <%= f.input :diet %>
        <div class="upload-box-file justify-content-center">
          <%= f.input :profile_picture_url, as: :file, label: false %>
        </div>
        <%= f.input :location %>
        <div class="d-flex mt-3 justify-content-between align-items-center">
        <div class="button-main-hover">
          <%= f.button :submit %>
        </div>
          <i class="fa-solid fa-xmark justify-content-center" data-action="click->profile#revealProfile"></i>
        </div>
    </div>
      <% end %>
  </div>
</div>
