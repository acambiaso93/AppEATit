
<div class="container">
  <div class="row justify-content-center">
    <div class="profile-form">
      <%= simple_form_for(current_user, url: registration_path(current_user), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

        <%= f.simple_fields_for :user do |f| %>
          <%= f.input :user_name %>
          <%= f.input :description, placeholder: "min. 100 characters" %>
          <%= f.input :diet %>
          <%= f.input :profile_picture_url, as: :file, label: false %>
          <%= f.input :location %>
          <%= f.input :email, required: true, autofocus: true %>
          <div class="d-flex mt-3 justify-content-between align-items-center">
            <div class="button-main-hover form-actions">
              <%= f.button :submit, "Update" %>
            </div>
            <i class="fa-solid fa-xmark justify-content-center" data-action="click->profile#revealProfile"></i>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
