<div class="recipe-show">
  <div class="Image">
    <div class="recipe-image" style="background-image: url('<%= @recipe.image.nil? ? cl_image_path(@recipe.photo.key) : image_path(@recipe.image) %>');"></div>
  </div>

  <div class="info">
    <div class="recipe-titel">
      <%= @recipe.name %>
      <p class="recipe-category"><%= @recipe.category %></p>
    </div>

    <div class="recipe-points">
      <div class="recipe-general-info"><i class="fa-solid fa-utensils"> </i> <%= @recipe.servings %></div>
      <div class="recipe-general-info"><i class="fa-solid fa-hourglass-half"></i> <%= @recipe.cooking_time %> mins</div>
      <div class="recipe-general-info"><i class="fa-solid fa-dumbbell"></i> <%= @recipe.difficulty %></div>
    </div>

    <div class="recipe-instructions">
    <span class="recipe-sub">Instructions:</span><br>
    <br>
    <%= @recipe.instructions.html_safe %></div>
  </div>
</div>
